{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "removeComments": true,
        "strict": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "moduleResolution": "node", // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/24788
        "target": "es2020",
        "jsx": "react",
        "watch": true,
        "strictFunctionTypes": false, // https://github.com/reduxjs/reselect/issues/446
    },
    "include": [
        "./src/**/*"
    ]
}